{
  "version": "impact-quiz.v1",
  "meta": {
    "title": "Video Impact Review Quiz",
    "description": "Branch-aware intake for Impact Review reporting.",
    "created_at": "2025-09-01"
  },

  "validation": {
    "video_url_regex": "(?i)^(https?:\\/\\/)(?:www\\.)?(?:youtube\\.com\\/watch\\?v=[\\w-]+|youtu\\.be\\/[\\w-]+|vimeo\\.com\\/[\\d]+|tiktok\\.com\\/.+|instagram\\.com\\/.+|linkedin\\.com\\/.+).*$",
    "email_regex": "^[^\\s@]+@[^\\s@]+\\.[^\\s@]+$",
    "allowed_platforms": ["YouTube", "TikTok", "Instagram", "LinkedIn", "Vimeo"]
  },

  "questions": {
    "Q1": {
      "text": "What’s the main job you need your video to do right now?",
      "type": "single_select",
      "options": [
        {"id": "audience", "label": "Grow my audience"},
        {"id": "sales", "label": "Generate more leads & sales"},
        {"id": "authority", "label": "Build brand authority"},
        {"id": "engagement", "label": "Boost social engagement"}
      ],
      "branch": true,
      "lens": "primary_success_metric"
    },

    "Q2": {
      "text": "Which platform matters most for your growth right now?",
      "type": "single_select",
      "options": [
        {"id": "yt", "label": "YouTube"},
        {"id": "tt", "label": "TikTok"},
        {"id": "ig", "label": "Instagram"},
        {"id": "li", "label": "LinkedIn"}
      ],
      "branch_group": "audience",
      "lens": "platform_benchmark"
    },

    "Q3": {
      "text": "What’s the biggest roadblock holding back your growth?",
      "type": "single_select",
      "options": [
        {"id": "hook", "label": "Grabbing attention (scroll-stopping)"},
        {"id": "watch", "label": "Getting people to actually watch (watch time)"},
        {"id": "subs", "label": "Turning viewers into subscribers"},
        {"id": "consistency", "label": "Staying consistent with content"}
      ],
      "branch_group": "audience",
      "lens": "growth_weak_spot"
    },

    "Q4": {
      "text": "What’s the primary conversion goal of this video?",
      "type": "single_select",
      "options": [
        {"id": "web", "label": "Drive website traffic"},
        {"id": "calls", "label": "Book calls"},
        {"id": "purchase", "label": "Generate purchases"},
        {"id": "subs_goal", "label": "Build subscribers"}
      ],
      "branch_group": "sales",
      "lens": "conversion_type"
    },

    "Q5": {
      "text": "What’s tripping you up most when it comes to sales?",
      "type": "single_select",
      "options": [
        {"id": "no_clicks", "label": "Not enough clicks"},
        {"id": "no_conv", "label": "Lots of clicks, no conversions"},
        {"id": "unclear_offer", "label": "Offer isn’t clear enough"},
        {"id": "wrong_audience", "label": "Attracting the wrong audience"}
      ],
      "branch_group": "sales",
      "lens": "conversion_gap"
    },

    "Q6": {
      "text": "How do you want your brand to show up on video?",
      "type": "single_select",
      "options": [
        {"id": "leader", "label": "As a thought leader"},
        {"id": "educator", "label": "As an educator"},
        {"id": "inspiration", "label": "As an inspiration"}
      ],
      "branch_group": "authority",
      "lens": "brand_archetype"
    },

    "Q7": {
      "text": "What’s your biggest challenge with your video’s impact?",
      "type": "single_select",
      "options": [
        {"id": "credibility", "label": "Earning credibility"},
        {"id": "consistency_auth", "label": "Staying consistent"},
        {"id": "differentiation", "label": "Standing out from competitors"},
        {"id": "recognition", "label": "Getting recognized"}
      ],
      "branch_group": "authority",
      "lens": "authority_barrier"
    },

    "Q8": {
      "text": "Which engagement metric do you track as your top priority?",
      "type": "single_select",
      "options": [
        {"id": "likes", "label": "Likes"},
        {"id": "comments", "label": "Comments"},
        {"id": "followers", "label": "Followers"},
        {"id": "shares", "label": "Shares"}
      ],
      "branch_group": "engagement",
      "lens": "engagement_goal"
    },

    "Q9": {
      "text": "What’s your biggest challenge in getting people to engage with your videos?",
      "type": "single_select",
      "options": [
        {"id": "no_interaction", "label": "No interaction at all"},
        {"id": "few_comments", "label": "Hardly any comments"},
        {"id": "passive", "label": "Viewers watch but don’t respond"},
        {"id": "inconsistent", "label": "Engagement is inconsistent"}
      ],
      "branch_group": "engagement",
      "lens": "engagement_barrier"
    },

    "Q10": {
      "text": "Who’s the ideal prospect this video is meant to reach?",
      "type": "single_select",
      "options": [
        {"id": "new_leads", "label": "New leads (people who don’t know you yet)"},
        {"id": "prospects", "label": "Prospects (interested but not customers yet)"},
        {"id": "customers", "label": "Existing customers (nurture + retention)"},
        {"id": "peers", "label": "Industry peers / niche audience (authority & thought leadership)"}
      ],
      "lens": "funnel_stage_alignment"
    },

    "Q11": {
      "text": "How’s it performing now?",
      "type": "single_select",
      "options": [
        {"id": "views_vs_engagement", "label": "Views vs engagement"},
        {"id": "no_traction", "label": "No traction"},
        {"id": "crushing_it", "label": "Crushing it"}
      ],
      "lens": "baseline_performance"
    },

    "Q12": {
      "text": "On a scale of 1–10, how confident are you in this video’s impact?",
      "type": "scale_1_10",
      "lens": "subjective_confidence"
    },

    "Q13": {
      "text": "Paste the public link to the video you’d like us to review.",
      "type": "url",
      "lens": "primary_asset"
    },

    "Q14": {
      "text": "Enter your email to receive your personalized Video Impact Review.",
      "type": "email",
      "lens": "delivery_channel"
    }
  },

  "branching": {
    "start": "Q1",
    "paths": {
      "audience": ["Q2", "Q3"],
      "sales": ["Q4", "Q5"],
      "authority": ["Q6", "Q7"],
      "engagement": ["Q8", "Q9"]
    },
    "common_tail": ["Q10", "Q11", "Q12", "Q13", "Q14"]
  },

  "lenses": {
    "primary_success_metric": {
      "audience": "Audience growth KPIs: reach, impressions, new followers/subs",
      "sales": "Conversion KPIs: CTR, landings, ROAS",
      "authority": "Authority KPIs: trust cues, clarity, polish",
      "engagement": "Engagement KPIs: comments, shares, retention"
    },
    "platform_benchmark": {
      "yt": "Watch time, CTR (title/thumbnail), retention curve",
      "tt": "Shares, rewatches, average watch %, hook strength",
      "ig": "Saves/shares, comments, reach vs followers",
      "li": "Comments, meaningful reactions, click-through to profile/site"
    },
    "growth_weak_spot": {
      "hook": "Evaluate opening 3–5s hook, title/thumbnail fit",
      "watch": "Narrative pacing, pattern interrupts, segment structure",
      "subs": "Value promise, community framing, subscribe CTA",
      "consistency": "Cadence, templateability, brand system"
    },
    "conversion_type": {
      "web": "CTA clarity, overlay/link usage, value path to site",
      "calls": "Trust-building, urgency, friction reduction",
      "purchase": "Offer clarity, benefits > features, social proof",
      "subs_goal": "Retention incentives, community hooks"
    },
    "conversion_gap": {
      "no_clicks": "Improve thumbnail/title/hook; sharpen CTA in-frame",
      "no_conv": "Align landing page; remove message mismatch",
      "unclear_offer": "Clarify offer & outcomes; simplify ask",
      "wrong_audience": "Tighten targeting & creative fit"
    },
    "brand_archetype": {
      "leader": "Expert framing, POV, credibility markers",
      "educator": "Clear structure, stepwise value, pacing",
      "inspiration": "Emotional arc, aspirational visuals/VO"
    },
    "authority_barrier": {
      "credibility": "Production quality, sources, case proof",
      "consistency_auth": "Publishing cadence, visual consistency",
      "differentiation": "Creative novelty, pattern-breaks",
      "recognition": "Brand recall (logos/colors/tagline reuse)"
    },
    "engagement_goal": {
      "likes": "Surface resonance & aesthetic impact",
      "comments": "Prompt questions, conversation triggers",
      "followers": "Series framing, community promise",
      "shares": "Social currency, culture/relevance"
    },
    "engagement_barrier": {
      "no_interaction": "Weak hook/ask; low relatability",
      "few_comments": "No dialog prompts; unclear question",
      "passive": "CTA strength; interactive cues missing",
      "inconsistent": "Cadence & format inconsistency"
    },
    "funnel_stage_alignment": {
      "new_leads": "TOFU: hook clarity, brand intro, recall",
      "prospects": "MOFU: value prop, objections, differentiation",
      "customers": "BOFU/loyalty: reinforcement, upsell fit",
      "peers": "Authority: depth, originality, tone"
    },
    "baseline_performance": {
      "views_vs_engagement": "Strong top-line visibility, weak interaction",
      "no_traction": "Distribution or audience mismatch",
      "crushing_it": "Identify success drivers for scale"
    },
    "subjective_confidence": {
      "scale": "1–3 low; 4–7 neutral; 8–10 high"
    }
  },

  "routing_helper": {
    "explain": "Given a Q1 selection, present Q1, then the two questions listed in branching.paths[selection], then always present branching.common_tail in order.",
    "example_run": {
      "q1_choice": "authority",
      "sequence": ["Q1", "Q6", "Q7", "Q10", "Q11", "Q12", "Q13", "Q14"]
    }
  }
}